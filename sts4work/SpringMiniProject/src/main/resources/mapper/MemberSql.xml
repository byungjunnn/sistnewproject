<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="boot.data.mapper.MemberMapperInter">
	<insert id="insertMember" parameterType="MemberDto">
		insert into minimember
		values(null,#{name},#{id},#{pass},#{photo},#{hp},#{addr},#{email},now())
	</insert>

	<select id="getAllMembers" resultType="MemberDto">
		select * from minimember
		order by id
	</select>

	<select id="getSearchId" parameterType="String" resultType="int">
		select count(*) from minimember where id=#{id}
	</select>

	<select id="getName" parameterType="String" resultType="String">
		select
		name from minimember where id=#{id}
	</select>

	<select id="loginIdPassCheck" parameterType="Map"
		resultType="int">
		select count(*) from minimember where id=#{id} and
		pass=#{pass}
	</select>

	<select id="getDataById" parameterType="String"
		resultType="MemberDto">
		select * from minimember where id=#{id}
	</select>

	<delete id="deleteMember" parameterType="String">
		delete from minimember where num=#{num}
	</delete>
	
	<select id="getDataByNum" parameterType="String"
		resultType="MemberDto">
		select * from minimember where num=#{num}
	</select>
	
	<update id="updatePhoto" parameterType="Map">
		update minimember set photo=#{photo} where num=#{num}
	</update>

	<update id="updateMember" parameterType="MemberDto">
		update minimember set
		name=#{name},hp=#{hp},addr=#{addr},email=#{email} where num=#{num}
	</update>
</mapper>