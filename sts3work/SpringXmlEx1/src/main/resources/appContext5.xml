<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="info" class="spring.di.ex5.SawonInfo">
		<constructor-arg value="이민수"/>
		<constructor-arg value="대리"/>
		<property name="pay" value="5000000"/>
		<property name="buseo">
			<list>
				<value>홍보부</value>
				<value>인사부</value>
				<value>범무부</value>
				<value>기획부</value>
			</list>
		</property>
	</bean>
	
	<bean id="emp" class="spring.di.ex5.Emp">
		<constructor-arg value="좋소"/>
		<property name="emploc" value="서울시 강남구 역삼동"/>
		<property name="info" ref="info"/>
	</bean>
</beans>
